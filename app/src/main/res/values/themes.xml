<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BatikCapstone" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BatikCapstone.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BatikCapstone.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BatikCapstone.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/custom_searchicon</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/secondary</item>
    </style>

    <style name="RectangleShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">5dp</item>
        <item name="cornerSizeTopLeft">5dp</item>
        <item name="cornerSizeBottomRight">5dp</item>
        <item name="cornerSizeBottomLeft">5dp</item>
    </style>

    <style name="textStyle_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/lancelot</item>
    </style>
    <style name="textStyle_semititle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/lancelot</item>
    </style>
    <style name="textStyle_subtitle">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lancelot</item>
    </style>
    <style name="textStyle_desc">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/lancelot</item>
    </style>


</resources>